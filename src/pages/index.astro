---
import MySiteLayout from '../layouts/MySiteLayout.astro';
import Hero from '../components/index/Hero.astro';
import sectionVisualImage from '../assets/top/mission/section-visual.png';
import { getImage } from 'astro:assets';
import ArrowIcon from '../components/icons/ArrowIcon.astro';

// WebP画像の生成
const sectionVisualWebp = await getImage({
  src: sectionVisualImage,
  format: 'webp',
  widths: [375, 750, 1024, 1536, 2048],
});
---

<MySiteLayout>
  <Hero />
  <section class="mission">
    <div class="mission__inner">
      <header class="mission__header">
        <h2 class="mission__title">
          <span class="mission__title-main">MISSION</span>
          <span class="mission__title-sub">企業理念</span>
        </h2>
      </header>

      <div class="mission__content">
        <div class="mission__text">
          <h3 class="mission__catch">
            みんなに愛される<br />
            会社づくり
          </h3>
          <p class="mission__desc">
            ホンダ自動車販売グループは「人ありき、そして躍進」というスローガンのもと、人と企業の永続的な成長を目指しています。お客さまはもちろんのこと、社員や社員のご家族、そして地域から必要とされ愛される会社づくりをするべく、その礎となる「人」をとても大切にしています。
          </p>
        </div>

        <figure class="mission__figure">
          <picture>
            <source
              srcset={sectionVisualWebp.srcSet.attribute}
              media="(min-width: 1024px)"
              type="image/webp"
              sizes="50vw"
            />
            <source
              srcset={sectionVisualWebp.srcSet.attribute}
              media="(max-width: 1023px)"
              type="image/webp"
              sizes="100vw"
            />
            <source
              srcset={sectionVisualImage.src}
              media="(min-width: 1024px)"
              type="image/png"
              sizes="50vw"
            />
            <img
              src={sectionVisualImage.src}
              alt="社員4名がオフィスでパソコンを見ながら笑顔で仕事をしている様子"
              class="mission__visual"
              width={sectionVisualImage.width}
              height={sectionVisualImage.height}
            />
          </picture>
        </figure>
        <a href="/philosophy/" class="mission__link">
          企業理念はこちら
          <span class="mission__link-icon" aria-hidden="true">
            <ArrowIcon />
          </span>
        </a>
      </div>
    </div>
  </section>
</MySiteLayout>

<style lang="scss">
  @import '../styles/functions.scss';
  @import '../styles/mixins.scss';

  .mission {
    position: relative;
    padding: spx(130) 0;
    @include tablet-up {
      padding: ppx(271 * $pc-to-tab-ratio) 0 ppx(316 * $pc-to-tab-ratio);
    }
    @include desktop-up {
      padding: ppx(271) 0 ppx(316);
    }

    &__inner {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__header {
      color: $base_color_2;
      margin-left: spx(56);

      @include tablet-up {
        margin-left: ppx(1307 * $pc-to-tab-ratio);
      }
      @include desktop-up {
        margin-left: ppx(1307);
      }
    }

    &__title {
      display: flex;
      flex-direction: column;
      gap: spx(15);
      @include tablet-up {
        gap: ppx(20 * $pc-to-tab-ratio);
      }
      @include desktop-up {
        gap: ppx(20);
      }

      &-main {
        font-family: $font-noto-serif-jp;
        font-size: spx(111);
        font-weight: 700;
        line-height: spx(111);

        @include tablet-up {
          font-size: ppx(145 * $pc-to-tab-ratio);
          line-height: ppx(145 * $pc-to-tab-ratio);
        }

        @include desktop-up {
          font-size: ppx(145);
          line-height: ppx(145);
        }
      }

      &-sub {
        font-family: $font-noto-sans-jp;
        color: $base_color_2;
        font-size: spx(27);
        font-weight: 500;
        line-height: 100%;
        letter-spacing: spx(2.7);
        display: flex;
        align-items: center;
        gap: spx(23);

        @include tablet-up {
          font-size: ppx(35 * $pc-to-tab-ratio);
          letter-spacing: ppx(3.5 * $pc-to-tab-ratio);
          gap: ppx(30 * $pc-to-tab-ratio);
        }

        @include desktop-up {
          font-size: ppx(35);
          letter-spacing: ppx(3.5);
          gap: ppx(30);
        }
        &::before {
          content: '';
          display: block;
          width: spx(153);
          height: 1px;
          background-color: $base_color_2;
          margin-left: spx(4);
          @include tablet-up {
            width: ppx(200 * $pc-to-tab-ratio);
            margin-left: ppx(11 * $pc-to-tab-ratio);
          }
          @include desktop-up {
            width: ppx(200);
            margin-left: ppx(11);
          }
        }
      }
    }

    &__content {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__text {
      margin-top: spx(50);
      margin-left: spx(60);
      @include tablet-up {
        margin-left: ppx(1307 * $pc-to-tab-ratio);
        margin-top: ppx(83 * $pc-to-tab-ratio);
      }
      @include desktop-up {
        margin-left: ppx(1307);
        margin-top: ppx(83);
      }
    }

    &__catch {
      font-family: $font-noto-serif-jp;
      color: $base_color_white;
      font-size: spx(69);
      font-weight: 700;
      line-height: 130%;
      letter-spacing: spx(6.21);

      @include tablet-up {
        font-size: ppx(95 * $pc-to-tab-ratio);
        letter-spacing: ppx(9.5 * $pc-to-tab-ratio);
      }

      @include desktop-up {
        font-size: ppx(95);
        letter-spacing: ppx(9.5);
      }
    }

    &__desc {
      color: $base_color_white;
      font-size: spx(31);
      font-weight: 500;
      line-height: 180%;
      margin-top: spx(50);
      width: spx(600);

      @include tablet-up {
        font-size: ppx(35 * $pc-to-tab-ratio);
        line-height: 200%;
        margin-top: ppx(97 * $pc-to-tab-ratio);
        width: ppx(874 * $pc-to-tab-ratio);
      }

      @include desktop-up {
        font-size: ppx(35);
        line-height: 200%;
        margin-top: ppx(97);
        width: ppx(874);
      }
    }

    &__figure {
      text-align: center;
      @include tablet-up {
        text-align: unset;
        position: absolute;
        top: ppx(200 * $pc-to-tab-ratio);
        left: 0;
      }
      @include desktop-up {
        top: ppx(200);
        left: 0;
      }
      img {
        width: spx(602);
        height: auto;
        margin-top: spx(70);

        @include tablet-up {
          width: ppx(1000 * $pc-to-tab-ratio);
          margin-top: 0;
        }
        @include desktop-up {
          width: ppx(1000);
          margin-top: 0;
        }
      }
    }

    &__link {
      color: $base_color_white;
      font-size: spx(35);
      font-weight: 500;
      line-height: 100%;
      letter-spacing: spx(1.75);
      display: flex;
      align-items: center;
      gap: spx(40);
      width: spx(484);
      height: spx(120);
      padding-left: spx(80);
      border: 1px solid $base_color_white;
      transition:
        border-color 0.3s ease,
        background-color 0.3s ease;
      margin-top: spx(70);
      margin-inline: auto;

      @include tablet-up {
        font-size: ppx(35 * $pc-to-tab-ratio);
        letter-spacing: ppx(1.75 * $pc-to-tab-ratio);
        width: ppx(484 * $pc-to-tab-ratio);
        height: ppx(120 * $pc-to-tab-ratio);
        gap: ppx(40 * $pc-to-tab-ratio);
        padding-left: ppx(80 * $pc-to-tab-ratio);
        margin-top: ppx(40 * $pc-to-tab-ratio);
        margin-inline: unset;
        margin-left: ppx(1307 * $pc-to-tab-ratio);
      }

      @include desktop-up {
        font-size: ppx(35);
        letter-spacing: ppx(1.75);
        width: ppx(484);
        height: ppx(120);
        gap: ppx(40);
        padding-left: ppx(80);
        margin-top: ppx(40);
        margin-inline: unset;
        margin-left: ppx(1307);
      }

      @include hover {
        &:hover {
          background-color: $base_color_2;
          border-color: $base_color_2;
        }
      }
    }
    &-icon {
    }
  }
</style>
